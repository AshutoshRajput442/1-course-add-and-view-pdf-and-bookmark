// new use 
CREATE DATABASE new_course_db;
USE new_course_db; 

DROP TABLE IF EXISTS students;

CREATE TABLE students (
    id INT AUTO_INCREMENT PRIMARY KEY,
    email VARCHAR(255) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL
) AUTO_INCREMENT=1;

DESC students;